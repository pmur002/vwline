    sub <- function() {
        ## Control points
        grid.points(x, y, pch=16, gp=gpar(col="black"))
        ## Xspline 
        grid.xspline(x, y, shape=1)
        if (step < 2) return()

        grid.rect(width=.92, height=.92, gp=gpar(col=NA, fill=rgb(1,1,1,.8)))
        pts <- vwline:::offsetXsplinePoints(vwgrob)
        n <- length(pts$mid$x)
        pts <- lapply(pts, 
                      function(x) { 
                          subset <- c(1, (1:n)[(1:n) %% 3 == 0], n)
